.mx .dataGridSearchBox
{
	padding: 2px;
	border-top: 1px solid #cccccc;/*E3E8EE*/
	overflow-x:auto;
	background: #f4f4f4;/*background: #F0F1F0;*/
	/*加下面这句是为了修复，查询框高度不断增高的问题，这是IE9下的一个问题*/
	display:inline-block;
}

.mx .dataGridSearchBox > table
{
	width:100%;
	table-layout: auto;
}

.mx .dataGridSearchBox > table > tbody > tr
{
	height: 21px;
	padding-top: 1px;
	padding-bottom: 1px;
}

.mx .dataGridSearchBox > table  tr > td
{
	border: 0px;/* 1px solid #E3E8EE*/
	vertical-align:middle;
	height:20px;
}

.mx .dataGridSearchBox > table > tbody > tr > td.editor
{
	text-align:left;
}

.mx .dataGridSearchBox > table > tbody > tr > td.caption
{
	text-align:right;/*center*/
	background: #F0F1F0;
	white-space :nowrap ;
	overflow: hidden;
	text-overflow:ellipsis;
	font-weight: bold;
	font-size: 12px;
	padding-right: 5px;
	padding-left: 10px;
}

.mx .dataGridSearchBox > table > tbody > tr > td.buttonTd
{
	text-align:right;/*left*/
	padding-left: 20px;
	white-space: nowrap;
}
.mx .dataGridSearchBox > table > tbody > tr > td > div.space
{
	display:inline-block;
	width: 15px;
	height:15px;
}