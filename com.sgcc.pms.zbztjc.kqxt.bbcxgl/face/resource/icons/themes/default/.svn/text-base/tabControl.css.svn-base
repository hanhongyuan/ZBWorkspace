.mx .tabControl
{
	position:relative;
	cursor:default; 
}
.mx .tabControl > #head
{
	position:absolute;
	left:0;
	top:0;		
	width:100%;	
	height:27px;
	cursor:default;	
	white-space:nowrap;
	overflow:hidden;	
}


.mx .tabControl > #head > div.head-right
{
	position: absolute;
	width: 12px;
	height: 100%;
	top:0;
	right:0;
	border:1px solid #B6BCCC;
	cursor: pointer;
	display:none;
 	background:url(images/main_menu_scroll_right.png) no-repeat  center center; 
	background-color:#F0F1F0;
	border-radius:0 3px 3px 0;
	z-index:2;
}

.mx .tabControl > #head > div.head-left
{
	position: absolute;
	width: 12px;
	height: 100%;
	top:0;
	left:0;
	border:1px solid #B6BCCC;
	cursor: pointer;
	display:none;
	background:url(images/main_menu_scroll_left.png) no-repeat  center center; 
	background-color:#F0F1F0;
	border-radius:3px 0 0 3px;
	z-index:2;
}

.mx .tabControl > #head > a
{
	position:relative;
	display:inline-block;
	height:27px;
	border-left:1px solid #d2d2d2;
	border-top:1px solid #d2d2d2;
	border-right:1px solid #d2d2d2;
	text-decoration:none;		
	padding-left:5px;
	padding-right:15px;
	vertical-align:middle;
	background:url(images/tab_control_button_bg.png);
	color:black;
	cursor:default;
	user-select:none; -moz-user-select:none; -webkit-user-select:none;
}

.mx .tabControl > #head > a:first-child, .mx .tabControl > #head > a:last-child
{
	border-radius:5px 5px 0 0; -moz-border-radius:5px 5px 0 0; -webkit-border-radius:5px 5px 0 0;
}

.mx .tabControl > #head > a:hover
{		
	border-left:1px solid #d2d2d2;
	border-top:1px solid #d2d2d2;
	border-right:1px solid #d2d2d2;	
	background:url(images/tab_control_button_hover.png);
	box-shadow:inset 0 0 2px white; -moz-box-shadow:inset 0 0 2px white; -webkit-box-shadow:inset 0 0 2px white;	
}
.mx .tabControl > #head > a.selected
{			
	background-image:url(images/tab_control_button_pressed.png);
	background-color:#FFFFFF;
	border-bottom:1px solid transparent;		
}
.mx .tabControl > #head > a.selected:hover
{
	border-left:1px solid #d2d2d2;
	border-top:1px solid #d2d2d2;
	border-right:1px solid #d2d2d2;
}
.mx .tabControl > #head > a:first-child,
.mx .tabControl > #head > a.selected:first-child
{
	left:0;
}	
		
.mx .tabControl > #body
{
	position:absolute;
	border:1px solid #898C95;	
	top:26px;
	width:100%;	   
	bottom:0;
	overflow:hidden;
	background-color:#FFFFFF;
	padding: 8px;
}


.mx .tabControl > #body > div
{
	box-sizing:border-box; -moz-box-sizing:border-box; -webkit-box-sizing:border-box;	
    width:100%;
    height:100%;
	overflow:auto;
}



.mx .tabControl #head > a > .tab-icon
{
	position: relative;
	display:inline-block;
	vertical-align:middle;
	width: 16px;
	height: 16px;
	margin-right: 3px;
	top:4px;
	background: no-repeat;
}

.mx .tabControl #head > a > .tab-text
{
	position: relative;
	display:inline-block;
	vertical-align:middle;
	margin-right:5px;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow:hidden;
	top:4px;
	min-width:20px; 
	max-width:120px;
}


.mx .tabControl #head > a > .tab-close-icon
{
	position: absolute;
	display:inline-block;
	right:2px;
	top:6px;
	width: 12px;
	height: 12px;
	margin-right:3px;
	background: url(images/tab-close.png) no-repeat center center;
}

.mx .tabControl #head > a > .tab-close-icon:hover
{
	position: absolute;
	display:inline-block;
	width: 12px;
	height: 12px;
	right:2px;
	top:6px;
	background: url(images/tab-close-hover.png) no-repeat center center;
}